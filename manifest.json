{
    "default_locale": "en",

    "description": "Extension for Tabs",
    "homepage_url": "https://github.com/perrinod/tab-add-on",

    "background":{
        "scripts": ["background.js", "storage.js"]
    },

    "icons":{
        "100": "icons/pigeon-100.png"
    },

    "browser_action":{
        "default_icon": "icons/pigeon.svg",
        "browser_style": true,
        "default_title": "Generic Tab Extension",
        "default_popup": "options.html"
    },

    "manifest_version": 2,

    "name": "Generic Tab Extension",

    "options_ui":{
        "browser_style": true,
        "open_in_tab": false,
        "page": "options.html"
    },

    "permissions": [
        "contextMenus",
        "unlimitedStorage",
        "tabs",
        "sessions",
        "storage",
        "theme"
    ],

    "version": "1.0"
}
